<!DOCTYPE html>
<html>
	<head>
		<title>"contexto" | <%= @title %></title>
	</head>
	<body>
		<div class="container">

	      <!-- Main hero unit for a primary marketing message or call to action -->
	      <div class="hero-unit">
	        <h1>AlivioStripe</h1>
	        <p>Wearable for Physical Therapy</p>
	      	<%= simple_form_for @user do |f| %>
			  <%= f.input :name, label: 'Your name please' %>
			  <%= f.input :email, placeholder: 'user@domain.com' %>
			  <%= f.input :password, label: 'Your password please' %>
			  <%= f.input :password_confirmation %>
			  <%= f.submit "sign up"%>
			<% end %>
	      </div>
	</body>
</html>
